<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>サーチ範囲</th>
      <th>ターゲット種別</th>
      <th>ターゲットモーション</th>
      <th colspan="2">実行確率(変数名 x 係数)</th>
      <th>前回行動キャンセル種別</th>
      <th>実行行動リスト名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% unless action_routines.empty? %>
      <% action_routines.each.with_index(1) do |action_routine, i| %>
        <tr>
          <td><%= i %></td>
          <td><%= action_routine.search.name %></td>
          <td><%= action_routine.target_type.caption %></td>
          <td><%= action_routine.motion.caption %></td>
          <td><%= action_routine.rate.name %></td>
          <td><%= action_routine.rate_coefficient %></td>
          <td><%= action_routine.cancel_type.caption %></td>
          <td><%= action_routine.action_chain.name %></td>
          <td><%= link_to '削除', [project, exaction, @hp_condition, action_routine], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
    <%= render 'action_form' %>
  </tbody>
</table>
