<%= form_with(model: [project, action_chain], local: true) do |form| %>
  <% if action_chain.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(action_chain.errors.count, "error") %> prohibited this action_chain from being saved:</h2>

      <ul>
        <% action_chain.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :project_id, value: project.id %>

  <div class="form-group">
    <%= form.label :name, '名前', class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "送信", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
