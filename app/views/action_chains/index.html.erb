<p id="notice"><%= notice %></p>

<h1>Action Chains</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_chains.each do |action_chain| %>
      <tr>
        <td><%= action_chain.project_id %></td>
        <td><%= action_chain.name %></td>
        <td><%= link_to 'Show', action_chain %></td>
        <td><%= link_to 'Edit', edit_action_chain_path(action_chain) %></td>
        <td><%= link_to 'Destroy', action_chain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Action Chain', new_action_chain_path %>
