<p id="notice"><%= notice %></p>

<h1>Action Rules</h1>

<table>
  <thead>
    <tr>
      <th>Action chain</th>
      <th>Motion</th>
      <th>Move x</th>
      <th>Move y</th>
      <th>Next</th>
      <th>Search</th>
      <th>Target value</th>
      <th>Hold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_rules.each do |action_rule| %>
      <tr>
        <td><%= action_rule.action_chain_id %></td>
        <td><%= action_rule.motion_id %></td>
        <td><%= action_rule.move_x %></td>
        <td><%= action_rule.move_y %></td>
        <td><%= action_rule.next %></td>
        <td><%= action_rule.search_id %></td>
        <td><%= action_rule.target_value %></td>
        <td><%= action_rule.hold %></td>
        <td><%= link_to 'Show', action_rule %></td>
        <td><%= link_to 'Edit', edit_action_rule_path(action_rule) %></td>
        <td><%= link_to 'Destroy', action_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Action Rule', new_action_rule_path %>
