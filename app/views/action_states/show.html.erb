<h1><%= project.name %> / Action State</h1>

<p id="notice"><%= notice %></p>

<h2>属性</h2>
<dl class="dl-horizontal">
  <dt>Chara</dt>
  <dd><%= @action_state.chara %></dd>

  <dt>Field</dt>
  <dd><%= @action_state.field %></dd>

  <dt>Freq</dt>
  <dd><%= @action_state.freq %></dd>

  <dt>Precis</dt>
  <dd><%= @action_state.precis %></dd>
</dl>

<h2>サーチ</h2>

<div>
  <%= link_to '一覧', project_action_state_searches_path(project, @action_state) %>
</div>

<h2>確率変数</h2>

<div>
  <%= link_to '一覧', project_action_state_rates_path(project, @action_state) %>
</div>

<h2>ターゲット</h2>

<div>
  <%= link_to '一覧', project_action_state_targets_path(project, @action_state) %>
</div>

<br />

<div class="form-group">
  <%= link_to '出力', project_action_state_path(project, @action_state, format: 'text'), class: 'btn btn-primary' %>
</div>

<div class="form-group">
  <%= link_to '編集', edit_project_action_state_path(project, @action_state), class: 'btn btn-primary' %>
