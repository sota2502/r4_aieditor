<h1>AIルーチン</h1>

<% if @ai_routines.empty? %>

何もありません

<% else %>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @ai_routines.each do |ai_routine| %>
      <tr>
        <td><%= ai_routine.name %></td>
        <td><%= link_to '設定', ai_routine_hp_conditions_path(ai_routine) %></td>
        <td><%= link_to '編集', edit_ai_routine_path(ai_routine) %></td>
        <td><%= link_to '削除', ai_routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

